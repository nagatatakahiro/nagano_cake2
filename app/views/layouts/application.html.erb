<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <ul class="navbar-nav nav justify-content-end mr-sm-2">
        <% if customer_signed_in? %>

          <li class="nav-item">
            <%= link_to "マイページ", customers_current_customer_path, class: "nav-link fas fa-cookie" %>
          </li>
          <li class="nav-item">
            <%= link_to "商品一覧", items_path, class: "nav-link fas fa-cookie" %>
          </li>
          <li class="nav-item">
            <%= link_to "カート", cart_items_path, class: "nav-link fas fa-cookie" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_customer_session_path(current_customer), method: :delete, class: "nav-link fas fa-sign-out-alt" %>
          </li>
        <% elsif admin_signed_in? %>
          <li class="nav-item">
            <%= link_to "商品一覧", admin_items_path, class: "nav-link fas fa-cookie" %>
          </li>

          <li class="nav-item">
            <%= link_to "商品登録", new_admin_item_path, class: "nav-link fas" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "nav-link fas fa-sign-out-alt" %>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link fas fa-sign-in-alt" %>
          </li>
          <li class="nav-item">
            <%= link_to "商品一覧", items_path, class: "nav-link fas fa-sign-in-alt" %>
          </li>

          <li class="nav-item">
            <%= link_to "新規登録", new_customer_registration_path, class: "nav-link fas fa-user-plus" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_customer_session_path, class: "nav-link fas fa-sign-in-alt" %>
          </li>
        <% end %>
      </ul>
      </div>
    </nav>

</header>
    <%= yield %>
  </body>
</html>
