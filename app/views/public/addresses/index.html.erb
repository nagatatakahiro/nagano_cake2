<h1>配送先登録/一覧</h1>
<%= form_with model: @address, url: addresses_path do |f| %>
 <div class="form-group has-icon"><br>
    郵便番号(ハイフンなし) : <%= f.text_field :postal_code %>
  </div>
  <div class="form-group has-icon"><br>
    住所 : <%= f.text_field :address %>
  </div>
  <div class="form-group has-icon"><br>
    氏名 : <%= f.text_field :name %>
  </div>

  <%= f.submit "配送先を登録する", class:"btn btn-primary btn-block btn-base-1 mt-20" %>
<% end %>
<table class="table-bordered table-striped">
  <thead>
    <tr>
      <th>郵便番号<th>
      <th>住所</th>
      <th>氏名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td><%= link_to "編集する", edit_address_path(address) %>
          <%= link_to "削除する", address_path(address), method: :delete, confirm: "本当に削除しますか" %></td>
      </th>
      <% end %>
</tbody>
</table>
