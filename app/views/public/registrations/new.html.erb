<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <b>名前(漢字)</b>
      <div class="field mt-2">
      <%= f.label :first_name, "(姓)" %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name, "(名)" %>
      <%= f.text_field :last_name %>
      </div>

      <b>名前(フリガナ)</b>
      <div class="field mt-2">
      <%= f.label :first_name_kana, "(セイ)" %>
      <%= f.text_field :first_name_kana %>

      <%= f.label :last_name_kana, "(メイ)" %>
      <%= f.text_field :last_name_kana %>
      </div>

      <div class="field mt-3">
      <%= f.label :email, "メールアドレス", style:"font-weight:bold" %><br />
      <%= f.text_field :email %>
      </div>

      <div class="field mt-3">
      <%= f.label :postal_code, "郵便番号(ハイフン無し)", style:"font-weight:bold" %><br />
      <%= f.text_field :postal_code %>
      </div>

      <div class="field mt-3">
      <%= f.label :address, "住所", style:"font-weight:bold" %><br />
      <%= f.text_field :address %>
      </div>

      <div class="field mt-3">
      <%= f.label :telephone_number, "電話番号(ハイフン無し)", style:"font-weight:bold" %><br />
      <%= f.text_field :telephone_number %>
      </div>

    <div class="field mt-3">
      <%= f.label :password, "パスワード(6文字以上)", style:"font-weight:bold" %><br />
      <%= f.password_field :password %>
    </div>

    <div class="field mt-3">
      <%= f.label :password_confirmation, "パスワード(確認用)", style:"font-weight:bold" %><br />
      <%= f.password_field :password_confirmation %>
    </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
